@{
    ViewData["Title"] = "Services";
}

<div class="container my-5">
    <h2 class="text-center mb-4">Our Services</h2>
    <p class="text-center text-muted mb-5">
        We provide complete end-to-end solutions to simplify your event management experience.
    </p>

    <div class="row g-4">

        <!-- Service 1 -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 service-card">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-event fs-1 text-primary"></i>
                    <h5 class="mt-3">Event Planning & Scheduling</h5>
                    <p>Plan, organize and manage your events with our easy-to-use tools.</p>
                </div>
            </div>
        </div>

        <!-- Service 2 -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 service-card">
                <div class="card-body text-center">
                    <i class="bi bi-laptop fs-1 text-success"></i>
                    <h5 class="mt-3">Online Registrations</h5>
                    <p>Let attendees register online quickly from any device.</p>
                </div>
            </div>
        </div>

        <!-- Service 3 -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 service-card">
                <div class="card-body text-center">
                    <i class="bi bi-people fs-1 text-warning"></i>
                    <h5 class="mt-3">Attendee Management</h5>
                    <p>Track attendees, confirmations and attendance easily.</p>
                </div>
            </div>
        </div>

        <!-- Service 4 -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 service-card">
                <div class="card-body text-center">
                    <i class="bi bi-bell fs-1 text-danger"></i>
                    <h5 class="mt-3">Automated Notifications</h5>
                    <p>Send reminders and updates via email or SMS.</p>
                </div>
            </div>
        </div>

        <!-- Service 5 -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 service-card">
                <div class="card-body text-center">
                    <i class="bi bi-bar-chart fs-1 text-info"></i>
                    <h5 class="mt-3">Event Analytics</h5>
                    <p>Get detailed reports and insights on your events.</p>
                </div>
            </div>
        </div>

        <!-- Service 6 -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 service-card">
                <div class="card-body text-center">
                    <i class="bi bi-cash-coin fs-1 text-secondary"></i>
                    <h5 class="mt-3">Payment Integration</h5>
                    <p>Accept online payments securely for ticketed events.</p>
                </div>
            </div>
        </div>

    </div>
</div>

<style>
    .service-card {
        transition: 0.3s ease-in-out;
        border-radius: 12px;
    }
    .service-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    }
</style>
