@model EventManagement.Models.Event
@{
    ViewData["Title"] = "Event Details";
}
<h2>@Model.Title</h2>
<p class="text-muted">@Model.EventDate.ToLocalTime():f • @Model.Location</p>
<p>@Model.Description</p>

<div class="mt-3">
    <a class="btn btn-success" href="/Registration/Register/@Model.Id">Register</a>
    <a class="btn btn-warning" href="/Events/Edit/@Model.Id">Edit</a>
</div>

<hr />
<p><strong>Registered:</strong> @Model.Registrations</p>
